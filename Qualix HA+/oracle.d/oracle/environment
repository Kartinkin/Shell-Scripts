################################################################################
################################################################################
#
# Переменная задает режим завершения СУБД
# Может принимать значения shutdown или abort
Shutdown="abort"

# Промежуток времени (в секундах) в течениии которого мы ждем завершения
# работы СУБД после подачи команды 'shutdown immediate'.
# По истечении заданного времени запускается 'shutdown abort'.
# Внимание! Данное значение должно быть на ABORT_TIME_OUT+10 меньше таймаута,
# установленного в конфигурации пакета для этого сервиса.
ShutdownTimeOut=300

# Промежуток времени (в секундах) в течениии которого мы ждем завершения
# работы СУБД после подачи команды 'shutdown abort'.
# По истечении заданного времени процессы СУБД убиваются.
AbortTimeOut=20

# Имя пользователя, отвечающего за старт/останов СУБД
OracleUser=oracle

# Переменная, определяющая, надо ли отслеживать процессы СУБД по их PID'ам,
# или достаточно по именам. Если значение "yes", при старте СУБД будут
# сохранены PID'ы процессов smon, pmon, lgwr, dbwr, dbw0 и ckpt,
# и, в последствии, их тестовый скрипт будет искать. Если значение "no",
# проверка производится по именам процессов.
TestPIDs=no

# Имя и пароль пользователя, от имени которого производятся проверки
TestUser="test/test"
# SQL-запрос для проверки доступности БД
TestStatement="select sysdate from dual;"
# Подстрока, которая должна присутствовать в выводе TestStatement
TestString="SYSDATE"

# Переменная используется для отправления сообщений по протоколу syslog.
# Это первая часть пары (facility.level). Может принимать значения
# user, kern, mail, daemon, auth, lpr, local0-5. См. syslog (3C).
SGFacility=local2

# Переменная содержит список пользователей,
# которым в случае сбоя будет отправлена почта
MailTo="${OracleUser} root"
